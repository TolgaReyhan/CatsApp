@model List<CatViewModel>

<h1> All Cats Info</h1>
<hr />
<table class="table table-hover table-sm">
    <thead class="thead-dark">
        <tr>
            <th scope="col">Name</th>
            <th scope="col">Age</th>
            <th scope="col">Breed</th>
            <th scope="col">Image</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in @Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Age</td>
                <td>@item.Breed</td>
                <td><img src="@item.ImageUrl" width="20%" /></td>
                <td> <a asp-controller="Cat" asp-action="Details" asp-route-id="@item.Id">Details</a></td>
                <td> <a asp-controller="Cat" asp-action="Edit" asp-route-id="@item.Id">Edit</a></td>
                <td> <a asp-controller="Cat" asp-action="Delete" asp-route-id="@item.Id">Delete</a></td>
            </tr>
        }
    </tbody>
</table>